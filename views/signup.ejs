<!DOCTYPE html>
<html>
<head>
    <title>
        <%= title %>
    </title>
</head>
<body>
    <form action="/signup" method="post">
        <h2>sign up</h2>
        <div>
            <label>Email:</label>
            <input type="text" name="email" />
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="passwd" />
        </div>
        <div>
            <label>nickname:</label>
            <input type="text" name="nickname" />
        </div>
        <div>
            <input type="submit" value="sign up" />
        </div>
        <%= error %>
    </form>
</body>

</html>
